<div class="pb-5">
    <div class="flex gap-3 w-full justify-center">
        <div class="w-[720px] h-[700px]">
            <Image
                src={promos[1]["image"]()}
                alt="Promo Image"
                class="object-cover w-full h-full"
            />
        </div>
