---
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/ourwork/*.jpg",
);

const promos = Object.entries(images).map(([path, image]) => ({
    path,
    image,
}));

console.log(promos);
